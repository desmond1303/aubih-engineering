<aside>
  <ul>
    {{#each items as |item|}}
      <li>
        <a href="{{item.link}}">{{item.title}}</a>
        {{#if item.subMenu}}
          <ul>
            {{#each item.subMenu as |subItem|}}
              <li>
                <a href="{{subItem.link}}">{{subItem.title}}</a>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</aside>
