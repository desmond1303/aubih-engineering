<header>
  <div class="top">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <img class="logo" src="/assets/images/logo.png" alt="AUBiH Logo">
          <div class="header-item-container">
            <a href="{{mailTo}}">{{fa-icon 'envelope-o'}}{{emailAddress}}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bottom">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="header-item-container">
            <ul>
              {{#each navigationItems as |navigationItem|}}
                <li>
                  <a href="{{navigationItem.link}}">
                    {{navigationItem.title}}
                  </a>
                  {{#if navigationItem.subMenu}}
                    <div>
                      <div class="row">
                        {{#each navigationItem.subMenu as |subItem|}}
                          <div class="{{get-col navigationItem.subMenu}}">
                            <h5>{{subItem.title}}</h5>
                            {{#each subItem.links as |linkItem|}}
                              <a href="{{linkItem.link}}">{{linkItem.title}}</a>
                            {{/each}}
                          </div>
                        {{/each}}
                      </div>
                    </div>
                  {{/if}}
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
